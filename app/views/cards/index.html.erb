<div class="page-header">
  <%= link_to new_card_path, :class => 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Card
  <% end %>
  <h1>Listing cards</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
            <th>Name</th>
            <th>Page &#8596; &#8597;</th>
            <th>Num box &#8596; &#8597;</th>
            <th>Gutter &#8593; &#8594; &#8595; &#8592;</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <%= content_tag_for(:tr, @cards) do |card| %>
            <td><%= card.name %></td>
            <td><%= card.page_x %>x<%= card.page_y %></td>
            <td><%= card.num_box_x %>x<%= card.num_box_y %></td>
            <td><%= card.gutter_t %> <%= card.gutter_r %>
                <%= card.gutter_b %> <%= card.gutter_l %></td>
            <td><%= link_to 'Show', card, :class => 'glyphicon glyphicon-info-sign' %></td>
        <td><%= link_to 'Edit', edit_card_path(card), :class => 'glyphicon glyphicon-pencil' %></td>
        <td><%= link_to 'Destroy', card, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'glyphicon glyphicon-remove' %></td>
      <% end %>
    </tbody>
  </table>
</div>
